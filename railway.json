{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build && npx playwright install chromium"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "node server.js",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 100
    }
}